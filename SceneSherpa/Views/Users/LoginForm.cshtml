@{
    string incorrect = ViewData["FailedLogin"] as string;
}

<h2 style="text-align: center; margin-top: 140px;">Already have an account with us? Log in!</h2>
<h3 style="text-align: center;">Or Login with Google!</h3>

<div class="background">
    <div class="shape"></div>
    <div class="shape"></div>
</div>
<form class="login" method="post" action="/users/login/attempt">
    <h3>Login Here</h3>

    <label for="username" class="login-form-label">Username</label>
    <input type="text" placeholder="Username" id="username" class="login-form-input">

    <label for="password" class="login-form-label">Password</label>
    <input type="password" placeholder="Password" id="password" class="login-form-input">

    <button class="login-button" type="submit">Log In</button>
    <div class="social">
        <div class="go"><i class="fab fa-google"></i>  Google</div><!--Here is where you can add the Google API-->
        <div class="fb"><i class="fab fa-facebook"></i>  Coming soon!</div>
    </div>
</form>